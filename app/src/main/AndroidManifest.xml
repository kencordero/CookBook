<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.kencordero.cookbook"
    android:versionCode="1"
    android:versionName="0.1" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.IngredientListActivity"
            android:label="@string/activity_ingredientList_title" >
        </activity>
        <activity
            android:name=".activities.IngredientPagerActivity"
            android:label="@string/app_name"
            android:parentActivityName=".activities.IngredientListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.IngredientListActivity" />
        </activity>
        <activity
            android:name=".activities.RecipeListActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RecipePagerActivity"
            android:label="@string/title_activity_recipe_pager" >
        </activity>
    </application>

</manifest>
